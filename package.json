{
  "name": "commandlino",
  "version": "0.0.1",
  "description": "A command line builder and runner",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "lint": "prettier -c **/*.ts",
    "prettify": "prettier --write **/*.ts",
    "test": "jest --forceExit --runInBand",
    "prepublish": "npm run build"
  },
  "dependencies": {
    "ramda": "^0.24.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.22",
    "@types/node": "^12.12.7",
    "faker": "^4.1.0",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.1.0",
    "typescript": "^3.7.2"
  },
  "jest": {
    "rootDir": "./",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/test/**/*.spec.ts"
    ],
    "preset": "ts-jest"
  },
  "author": "",
  "license": "ISC"
}
